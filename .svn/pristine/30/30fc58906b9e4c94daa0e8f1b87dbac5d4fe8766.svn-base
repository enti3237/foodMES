        Panel41.Visible = True

        Dim DBT As DataTable
        Dim i As Integer
        DBT = Nothing

        StrSQL = "SELECT * 
                  FROM Notice 
                  Where NT_Code = '" & DataGridView5.Rows(e.RowIndex).Cells("NT_Code").Value.ToString() & "'"
