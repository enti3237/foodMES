        StrSQL = "SELECT  '' as PO_JOB, PS_Code,PS_Sun, PS_Name, PS_PL_Name, PS_PO_Total, PS_St_Day, PS_St_Time, PS_En_Day, PS_En_Time, PS_Go, PS_Total, PS_Er, PS_Bigo 
                    FROM PO_Stock_List"
        Re_Count = DB_Select(DBT)

        DataGridView5.DataSource = DBT
