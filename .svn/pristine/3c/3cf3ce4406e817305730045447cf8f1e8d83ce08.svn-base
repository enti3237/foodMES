        DBT = Nothing

        StrSQL = "SELECT MTERCL_No, RCL.MTECL_No, MTER_Date, MTE_Name, MTE_Model, MTER_Due_Date, MTER_Issued_Loc, MTER_Return_Date, MTER_Bigo, MTER_Prepared, MTER_Prepare_Date, MTER_Updated, MTER_Update_Date
