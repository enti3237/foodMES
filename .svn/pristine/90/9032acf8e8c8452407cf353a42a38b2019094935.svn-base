    Private Sub Insert__LG_Click(sender As Object, e As EventArgs) Handles Insert__LG.Click
        If Len(Grid_Code.Item(0, Grid_Code.CurrentCell.RowIndex).Value) > 0 Then
        Else
            Exit Sub
        End If

        Grid_Display_Ch = False
        Dim DBT As New DataTable
        Dim Db_Sun As Long
        StrSQL = "Select PRODUCT_Sun From Product_LG with(NOLOCK) Where PRODUCT_Code = '" & Grid_Code.Item(0, Grid_Code.CurrentCell.RowIndex).Value & "' Order By Convert(Decimal,PRODUCT_Sun) Desc "
        Re_Count = DB_Select(DBT)
        If Re_Count = 0 Then
            Db_Sun = 1
        Else
            Db_Sun = DBT.Rows(0).Item(0) + 1
        End If

        '추가한다
        StrSQL = "SET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED "
        StrSQL = StrSQL & "Insert into Product_LG (PRODUCT_Code, PRODUCT_Sun)  Values ('" & Grid_Code.Item(0, Grid_Code.CurrentCell.RowIndex).Value & "', '" & Db_Sun & "')"
        Re_Count = DB_Execute()
        Grid_LG_Display(Grid_Code.Item(0, Grid_Code.CurrentCell.RowIndex).Value)
        Grid_Display_Ch = True
    End Sub

    Private Sub Delete__LG_Click(sender As Object, e As EventArgs) Handles Delete__LG.Click
        If Len(Grid_Code.Item(0, Grid_Code.CurrentCell.RowIndex).Value) > 0 Then
        Else
            Exit Sub
        End If

        If Len(Grid_LG.Item(0, Grid_LG.CurrentCell.RowIndex).Value) < 1 Then
            Exit Sub
        End If
        Grid_Display_Ch = False
        Dim i As Integer
        '삭제한다
        StrSQL = "SET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED "
        StrSQL = StrSQL & "Delete Product_LG Where PRODUCT_Code = '" & Grid_Code.Item(0, Grid_Code.CurrentCell.RowIndex).Value & "' And   PRODUCT_Sun = '" & Grid_LG.Item(0, Grid_LG.CurrentCell.RowIndex).Value & "'"
        Re_Count = DB_Execute()
        For i = Grid_LG.CurrentCell.RowIndex + 1 To Grid_LG.RowCount - 1
            '수정한다
            StrSQL = "SET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED "
            StrSQL = StrSQL & "Update Product_LG Set PRODUCT_Sun = '" & i & "' Where PRODUCT_Code = '" & Grid_Code.Item(0, Grid_Code.CurrentCell.RowIndex).Value & "' And  PRODUCT_Sun = '" & i + 1 & "'"
            Re_Count = DB_Execute()
        Next i
        Grid_LG_Display(Grid_Code.Item(0, Grid_Code.CurrentCell.RowIndex).Value)
        Grid_Display_Ch = True
    End Sub


