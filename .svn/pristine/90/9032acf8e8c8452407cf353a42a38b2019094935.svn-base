    Private Sub Process_Line_QC_Combo_SelectionChangeCommitted(sender As Object, e As EventArgs) Handles Process_Line_QC_Combo.SelectionChangeCommitted
        Dim DBT As New DataTable
        Process_Line_QC.Item(Process_Line_QC_Col, Process_Line_QC_Row).Value = Process_Line_QC_Combo.SelectedItem.ToString()
        Select Case Process_Line_QC_Col
            Case 1
                StrSQL = "Select PQ_History1, PQ_History2  From Product_QC with(NOLOCK) Where PQ_Code = '" & Process_Line_QC_Combo.SelectedItem.ToString() & "'"
                Re_Count = DB_Select(DBT)
                If Re_Count <> 0 Then
                    Process_Line_QC.Item(2, Process_Line_QC_Row).Value = DBT.Rows(0).Item(1)
                End If
            Case 2
                StrSQL = "Select PQ_History1, PQ_History2 From Product_QC with(NOLOCK) Where PQ_Code = '" & Process_Line_QC_Combo.SelectedItem.ToString() & "'"
                Re_Count = DB_Select(DBT)
                If Re_Count <> 0 Then
                    Process_Line_QC.Item(1, Process_Line_QC_Row).Value = DBT.Rows(0).Item(0)
                End If
        End Select
    End Sub

    Private Sub Process_Line_QC_MouseClick(sender As Object, e As MouseEventArgs) Handles Process_Line_QC.MouseClick
        Process_Line_QC_Row = Process_Line_QC.CurrentCell.RowIndex
        Process_Line_QC_Col = Process_Line_QC.CurrentCell.ColumnIndex
        Process_Line_QC_Combo.Visible = False
        If Process_Line_QC_Row < 0 Then
            Exit Sub
        End If
        If Process_Line_QC_Col < 0 Then
            Exit Sub
        End If
        Dim DBT As New DataTable

        Select Case Process_Line_QC_Col
            Case 1
                StrSQL = "Select PC_Code, PC_Name  From Process with(NOLOCK)  Order By PC_Code"
                Re_Count = DB_Select(DBT)
                Process_Line_QC_Combo.Items.Clear()
                If Re_Count <> 0 Then
                    For i = 0 To Re_Count - 1
                        Process_Line_QC_Combo.Items.Add(DBT.Rows(i).Item(0))
                    Next i
                End If

                Process_Line_QC_Combo.Top = Process_Line_QC.Top + Process_Line_QC.ColumnHeadersHeight + (Process_Line_QC_Row) * 24
                Process_Line_QC_Combo.Left = Process_Line_QC.Left + Grid_Pro.RowHeadersWidth + Grid_Pro.Columns(0).Width
                Process_Line_QC_Combo.Width = Process_Line_QC.Columns(Process_Line_QC_Col).Width
                Process_Line_QC_Combo.Text = Process_Line_QC.CurrentCell.Value.ToString
                Process_Line_QC_Combo.BackColor = Process_Line_QC.RowsDefaultCellStyle.BackColor
                Process_Line_QC_Combo.Visible = True
                Process_Line_QC_Combo.Focus.ToString()
            Case 2
                StrSQL = "Select PC_Code, PC_Name  From Process with(NOLOCK)  Order By PC_Code"

                Re_Count = DB_Select(DBT)
                Process_Line_QC_Combo.Items.Clear()
                If Re_Count <> 0 Then
                    For i = 0 To Re_Count - 1
                        Process_Line_QC_Combo.Items.Add(DBT.Rows(i).Item(1))
                    Next i
                End If
                Process_Line_QC_Combo.Top = Process_Line_QC.Top + Process_Line_QC.ColumnHeadersHeight + (Process_Line_QC_Row) * 24
                Process_Line_QC_Combo.Left = Process_Line_QC.Left + Process_Line_QC.RowHeadersWidth + Process_Line_QC.Columns(0).Width + Process_Line_QC.Columns(1).Width
                Process_Line_QC_Combo.Width = Process_Line_QC.Columns(Process_Line_QC_Col).Width
                Process_Line_QC_Combo.Text = Process_Line_QC.CurrentCell.Value.ToString
                Process_Line_QC_Combo.BackColor = Process_Line_QC.RowsDefaultCellStyle.BackColor
                Process_Line_QC_Combo.Visible = True
                Process_Line_QC_Combo.Focus.ToString()
        End Select
    End Sub

