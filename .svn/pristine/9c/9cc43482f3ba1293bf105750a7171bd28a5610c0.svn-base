    Private Sub Grid_Group_Load()
        Dim DBT As DataTable
        DBT = Nothing

        StrSQL = "SELECT GL_Code, GL_Level1, GL_Level2, GL_Level3, GL_Level4, GL_Level5, GL_Level6, GL_Level7, GL_Level8,
                         GL_Level9, GL_Level10, GL_Level11, GL_Level12
