        End If

        Dim DBT As New DataTable
        StrSQL = "Select *  From Customer with(NOLOCK) Where CUSTOMER_Name = '" & Search_Combo_Name.Text & "'"
        Re_Count = DB_Select(DBT)
        If Re_Count <> 0 Then
            Search_Combo.Text = DBT.Rows(0)("CUSTOMER_Code")
        End If

    End Sub
