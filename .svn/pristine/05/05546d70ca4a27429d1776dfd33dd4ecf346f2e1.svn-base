    Public Function Grid_Code_Display() As Boolean

        Dim DBT As New DataTable
        Dim i As Integer
        Dim j As Integer
        Grid_Code.RowCount = 1

        Select Case Search_Combo.Text
            Case "코드"
                StrSQL = "Select PROCESS_IN_Code, PROCESS_IN_Date, PROCESS_IN_DE_Name From PROCESS_IN with(NOLOCK) Where PROCESS_IN_Code Like '%" & Search_Text.Text & "%'  Order  By PROCESS_IN_Code DESC"
            Case "날짜"
                StrSQL = "Select PROCESS_IN_Code, PROCESS_IN_Date, PROCESS_IN_DE_Name From PROCESS_IN with(NOLOCK) Where PROCESS_IN_Date Like '%" & Search_Text.Text & "%' Or PROCESS_IN_Date Is Null  Order By PROCESS_IN_Date"
            Case "생산라인"
                StrSQL = "Select PROCESS_IN_Code, PROCESS_IN_Date, PROCESS_IN_DE_Name From PROCESS_IN with(NOLOCK) Where PROCESS_IN_DE_Name Like '%" & Search_Text.Text & "%' Or PROCESS_IN_DE_Name Is Null  Order By PROCESS_IN_DE_Name"
        End Select
        Re_Count = DB_Select(DBT)
        If Re_Count <> 0 Then
            Grid_Code.RowCount = Re_Count
            For i = 0 To Re_Count - 1
                For j = 0 To Grid_Code.ColumnCount - 1
                    Grid_Code.Item(j, i).Value = DBT.Rows(i).Item(j)
                Next j
            Next i
        Else
            Grid_Code.RowCount = 1
            For j = 0 To Grid_Code.ColumnCount - 1
                Grid_Code.Item(j, 0).Value = ""
            Next j
        End If
        Grid_Code_Display = True

        Grid_Code.MultiSelect = False
        Grid_Code.ClearSelection()

    End Function

    Private Sub Insert_Com_Click(sender As Object, e As EventArgs) Handles Insert_Com.Click
        '새로운 코드 추가
        Dim DBT As New DataTable
        Dim JP_Code As Long
        Dim My_Date As String
        Dim My_Time As String

        StrSQL = "Select GETDATE() "
        Re_Count = DB_Select(DBT)


        If Re_Count = 0 Then
            Exit Sub
        Else
            My_Date = DBT.Rows(0).Item(0)
            JP_Code = Mid(My_Date, 1, 4) & Mid(My_Date, 6, 2) & Mid(My_Date, 9, 2)
            My_Time = DateTime.Now.ToString("HH:mm:ss")
            My_Date = Mid(My_Date, 1, 4) & "-" & Mid(My_Date, 6, 2) & "-" & Mid(My_Date, 9, 2)
        End If


        StrSQL = "Select PROCESS_IN_Code From PROCESS_IN with(NOLOCK) Where PROCESS_IN_Date Like  '%" & My_Date & "%' Order By PROCESS_IN_Code Desc "
        Re_Count = DB_Select(DBT)
        If Re_Count = 0 Then
            JP_Code = JP_Code & "001"
        Else
            JP_Code = JP_Code & Format(Val(Mid(DBT.Rows(0).Item(0), 11, 3)) + 1, "00#")
        End If

        '추가한다
        StrSQL = "SET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED "
        StrSQL = StrSQL & "Insert into PROCESS_IN (PROCESS_IN_Code, PROCESS_IN_Date, PROCESS_IN_Time, PROCESS_IN_Name, PROCESS_IN_Sel, PROCESS_IN_ING)  Values ('PN" & JP_Code & "', '" & My_Date & "','" & My_Time & "','" & Frm_Main.Text_Man_Name.Text & "','수동', '진행중')"
        Re_Count = DB_Execute()
        Grid_Code_Display()
    End Sub
