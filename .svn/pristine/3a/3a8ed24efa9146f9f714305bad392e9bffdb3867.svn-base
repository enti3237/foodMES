    Public Function Product_Tree_Process(Pr_Nod As TreeNode, PD_Code As String, Nod_Count As Long) As String
        Dim My_Nod As TreeNode
        Dim i As Long
        Dim Re_Text As String
        'If Tree_Nodes_Count > 10 Then
        '    Product_Tree_Search = "Error"
        '    Exit Function
        'End If
        If Len(PD_Code) < 1 Then
            Product_Tree_Process = "BOM에 코드가 없는 자료가 있습니다. 확인 부탁 드립니다."
            Exit Function
        End If
        'Data를 가지고 온다.
        Dim DBT As New DataTable
        StrSQL = "Select PRODUCT_PROCESS_SUN, PRODUCT_CODE, Process.PC_Name, PROCESS_AMOUNT  From Product_Process With(NOLOCK), Process With(NOLOCK) Where Product_Process.PRODUCT_CODE = '" & PD_Code & "' And Product_Process.PRODUCT_CODE = Process.PC_Code Order By PRODUCT_PROCESS_SUN"
        Re_Count = DB_Select(DBT)
        If Re_Count <> 0 Then
            For i = 0 To Re_Count - 1
                Tree_Nodes_Count = Tree_Nodes_Count + 1
                My_Nod = Pr_Nod.Nodes.Add(DBT.Rows(i).Item(1).ToString & "-" & Tree_Nodes_Count, DBT.Rows(i).Item(1).ToString & " - " & DBT.Rows(i).Item(2).ToString & " 수량 : " & DBT.Rows(i)("PROCESS_AMOUNT").ToString, "공정.Png")
