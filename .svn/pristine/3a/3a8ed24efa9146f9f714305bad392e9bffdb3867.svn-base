    Public Function Grid_Code_Display(Display_Sel As Boolean) As Boolean

        Dim DBT As New DataTable
        Dim i As Integer
        Dim j As Integer
        Dim Je_Gu As String
        If Display_Sel Then
            Grid_Code.RowCount = 1
            If Search_Sel_Combo.Text = "전체" Then
                Je_Gu = ""
            Else
                Je_Gu = " And PRODUCT_SEL = '" & Search_Sel_Combo.Text & "'"
            End If
            Select Case Search_Combo.Text
                Case "코드"
                    StrSQL = "Select PRODUCT_CODE, PRODUCT_NAME, PRODUCT_SEL From Product with(NOLOCK) Where PRODUCT_CODE Like '%" & Search_Text.Text & "%' " & Je_Gu & " and PRODUCT_SEL='소모품'  Order By PRODUCT_CODE"
                Case "품명"
                    StrSQL = "Select PRODUCT_CODE, PRODUCT_NAME, PRODUCT_SEL From Product With(NOLOCK) Where PRODUCT_NAME Like '%" & Search_Text.Text & "%' " & Je_Gu & " and PRODUCT_SEL='소모품'  Order By PRODUCT_NAME"
            End Select
            Re_Count = DB_Select(DBT)
            If Re_Count <> 0 Then
                Grid_Code.RowCount = Re_Count
                For i = 0 To Re_Count - 1
                    For j = 0 To Grid_Code.ColumnCount - 1
                        Grid_Code.Item(j, i).Value = DBT.Rows(i).Item(j)
                    Next j
                Next i
            Else
                Grid_Code.RowCount = 1
                For j = 0 To Grid_Code.ColumnCount - 1
                    Grid_Code.Item(j, 0).Value = ""
                Next j
            End If
        End If
        Grid_Code_Display = True
    End Function
