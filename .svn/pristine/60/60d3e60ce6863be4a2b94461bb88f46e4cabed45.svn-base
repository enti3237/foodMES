            dtpRegDate2.Value = lstMain.Rows(e.RowIndex).Cells("LO_Issue_Date").Value.ToString
            txtBigo2.Text = lstMain.Rows(e.RowIndex).Cells("LO_Bigo").Value.ToString
            '#1. 작성자
            cboDBT.Columns.Add("Man_Code")
            cboDBT.Columns.Add("Man_Name")
