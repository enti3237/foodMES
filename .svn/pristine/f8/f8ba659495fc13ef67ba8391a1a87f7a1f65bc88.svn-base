        Dim i As Integer
        Dim d As Double
        StrSQL = "Select sum(WEIGHT) as weight
                    FROM IOT_SCALE"
        Re_Count = DB_Select(DBT)
        If Re_Count <> 0 Then
            TextBox2.Text = DBT.Rows(0)("WEIGHT")
        End If

